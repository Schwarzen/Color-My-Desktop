# --- Configuration ---
# Variables allow for easy overrides if paths change
DEST_DIR = $(HOME)/.local/share/Color-My-Gnome/scss
BIN_DIR  = $(HOME)/.local/bin
SCRIPT   = color-my-gnome.sh

.PHONY: install uninstall

install:
	@echo "Creating directories..."
	install -d $(DEST_DIR)
	install -d $(BIN_DIR)

	@echo "Installing SCSS partials to $(DEST_DIR)..."
	# Installs all .scss files from the local scss/ folder
	install -m 644 scss/*.scss $(DEST_DIR)

	@echo "Installing script to $(BIN_DIR)..."
	# Installs the script and makes it executable
	install -m 755 $(SCRIPT) $(BIN_DIR)/color-my-gnome

	@echo "------------------------------------------------"
	@echo "Installation complete!"
	@echo "Make sure $(BIN_DIR) is in your PATH."
	@echo "You can now run: color-my-gnome"

uninstall:
	@echo "Removing files..."
	rm -rf $(DEST_DIR)
	rm -f $(BIN_DIR)/color-my-gnome
	@echo "Uninstall complete."
